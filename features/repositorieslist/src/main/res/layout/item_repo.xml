<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/layout"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/repoTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:text="moko_web3"
		android:textColor="@color/design_default_color_on_primary"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/language"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:layout_marginTop="16dp"
		android:text="kotlin"
		android:textColor="@color/design_default_color_on_primary"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/description"
		android:layout_width="380dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="44dp"
		android:text="Нужно разработать android приложение для просмотра GitHub репозиториев."
		android:textColor="@color/design_default_color_on_primary"
		app:layout_constraintEnd_toEndOf="@+id/language"
		app:layout_constraintStart_toStartOf="@+id/repoTitle"
		app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>