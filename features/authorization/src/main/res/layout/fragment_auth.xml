<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#1b1b1b">

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="261dp"
		android:layout_height="235dp"
		android:layout_marginTop="28dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/github"
		android:contentDescription="@string/github_icon_desc" />

	<RelativeLayout
		android:id="@+id/signIn"
		android:layout_width="350dp"
		android:layout_height="48dp"
		android:layout_marginBottom="16dp"
		android:background="@drawable/layout_bg"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.491"
		app:layout_constraintStart_toStartOf="parent">

		<ProgressBar
			android:id="@+id/progress_bar"
			android:layout_width="25dp"
			android:layout_height="25dp"
			android:indeterminate="true"
			android:background="#9ccc65"
			android:indeterminateTint="@color/design_default_color_on_primary"
			android:layout_centerInParent="true"
			android:visibility="gone" />

		<TextView
			android:id="@+id/sign_in_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:background="#9ccc65"
			android:textColor="@color/design_default_color_on_primary"
			android:text="@string/sign_in_btn" />

	</RelativeLayout>

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/personal_token"
		android:layout_width="350dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="113dp"
		app:hintTextColor="#6b9b37"
		app:backgroundTint="#6b9b37"
		app:boxStrokeColor="#6b9b37"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imageView">

		<com.google.android.material.textfield.TextInputEditText
			android:id="@+id/token_edit_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="text"
			android:background="#1b1b1b"
			android:textColorHint="#6d6d6d"
			android:textColor="@color/design_default_color_on_primary"
			android:hint="@string/token_edit_text" />
	</com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>